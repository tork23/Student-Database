<title>
  <%= title %>
</title>

<form action="/interview/create_interview" method="POST" class="position-absolute top-50 start-50 translate-middle">
  <!-- Heading -->
  <div class="mb-4">
    <h1>Create Interview </h1>
  </div>

  <!-- Company Name -->
  <div class="mb-4">
    <label for="company_name" class="form-label">Company Name</label>
    <input type="text" class="form-control" name="company_name" aria-describedby="emailHelp">
  </div>

  <!-- Interview Date -->
  <div class="mb-4">
    <label for="interview_date" class="form-label">Date</label>
    <input type="date" class="form-control" name="interview_date">
  </div>
  
  <!-- Create Intervie -->
  <div class="mb-4 text-center">
    <button type="submit" class="btn btn-primary">Add Interview</button>
  </div>

</form>