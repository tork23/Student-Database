            </div>
            <!-- If user is not logged in  -->
          <% }else{ %>
            <div class="d-flex">
              <a class="navbar-brand" href="/users/sign-in">Sign In</a>
              <a class="navbar-brand" href="/users/sign-up">Sign Up</a>
            </div>
          <% } %>
        </div>
