    <nav class="navbar navbar-dark bg-primary">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Students Database</a>
            <!-- If user is logged in -->
          <% if (locals.user){ %>
            <div class="d-flex">
              <a class="navbar-brand" href="/users/csv/download_csv">Download CSV</a>
              <a class="navbar-brand" href="/student/student_list">Student List</a>
              <a class="navbar-brand" href="/interview/interview_list">Interview List</a>    
              <a class="navbar-brand" href="/users/profile"><%= user.name %></a>
