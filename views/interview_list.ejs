<title>
  <%= title %>
</title>

<div class="d-flex align-items-center justify-content-between">
    <!-- Heading -->
    <h1 class="mb-4">Interview List</h1>
    <a href="/interview/add_interview" class="link-primary" style="font-size: 25px">Add New Interview</a>
</div>

<table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Sr.No</th>  
        <th scope="col">Company</th>
        <th scope="col">Date</th>
        <th scope="col">Allocate</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% for( let i = 0; i < interviews.length; i++ ) { %>
          <tr>
            <th scope="row"><%= i+1 %></th>
            <td><%= interviews[i]['company_name'] %></td>
            <td><%= interviews[i]['interview_date'] %></td>
            <td> 
              <a href="/allocation/schedule/<%=interviews[i]['_id']%>" class="btn btn-primary btn-sm">Allocate</a>
            </td>
          </tr>
        <% } %>
      </tr>
    </tbody>
  </table>